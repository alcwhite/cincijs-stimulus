<%# 
  individual toggle button
  instantiates toggle_engagement controller (and engagement_assignment controller)
  doesn't set allValue, so it falls back to the default set in the controller
  sets hideClass to u-none
%>
<ul
  class="engagement"
  id="engagement-ul-<%= engagement.id %>"
  data-engagement-assignment-hide-class="u-none"
  data-toggle-engagement-hide-class="u-none"
  data-controller="toggle-engagement engagement-assignment"
>
  <%= render partial: 'engagement_header', locals: { engagement: engagement } %>
  <%= render partial: 'engagement_body', locals: { engagement: engagement } %>
</ul>